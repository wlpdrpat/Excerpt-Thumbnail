<?xml version="1.0"?>
<ruleset name="Excerpt Thumbnail Standards">
  <description>WordPress Coding Standards + PHPCompatibility for the Excerpt Thumbnail plugin.</description>

  <!-- Where to scan -->
  <file>.</file>

  <!-- Donâ€™t scan these -->
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>*/.github/*</exclude-pattern>
  <exclude-pattern>*/languages/*</exclude-pattern>

  <!-- Make WPCS + PHPCompatibility available without a global config -->
  <config name="installed_paths" value="vendor/wp-coding-standards/wpcs, vendor/phpcompatibility/php-compatibility, vendor/phpcompatibility/phpcompatibility-wp"/>

  <!-- Target PHP versions you intend to support -->
  <config name="testVersion" value="7.4-8.3"/>

  <!-- Standards -->
  <rule ref="WordPress-Core"/>
  <rule ref="WordPress-Docs"/>
  <rule ref="WordPress-Extra"/>
  <rule ref="PHPCompatibilityWP"/>

  <!-- Sensible defaults -->
  <arg value="sp"/> <!-- show sniff codes -->
  <arg name="basepath" value="."/>
  <severity>5</severity>

  <!-- Example: Allow echo in templates; you can fine-tune ignores as needed -->
  <!-- <rule ref="WordPress.Security.EscapeOutput.OutputNotEscaped">
    <exclude-pattern>public/.*</exclude-pattern>
  </rule> -->
</ruleset>
